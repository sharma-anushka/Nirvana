<script>
function toggleFAQ(element) {
    const answer = element.nextElementSibling;
    answer.classList.toggle('hidden'); 
    const arrow = element.querySelector('.faq-arrow');
    arrow.textContent = answer.classList.contains('hidden') ? '▼' : '▲'; 
}

document.getElementById('try-breathing-button').addEventListener('click', function() {
    const exerciseCard = document.getElementById('exerciseCard');
    exerciseCard.classList.remove('hidden');

    let timeLeft = 120; 
    const timerDisplay = document.getElementById('timer');
    const instruction = document.getElementById('instruction');
    const breathingDuration = 4; 
    let inhale = true;

    timerDisplay.textContent = timeLeft;

    const countdown = setInterval(function() {
        timeLeft--;
        timerDisplay.textContent = timeLeft;

        if (timeLeft % 8 === 0) { 
            instruction.textContent = inhale ? "Inhale" : "Exhale";
            inhale = !inhale; 
        }

        if (timeLeft <= 0) {
            clearInterval(countdown);
            instruction.textContent = "Great job! You're done!";
            document.getElementById('animation-circle').classList.add('hidden'); 
        }
    }, 1000);
});

document.getElementById('closeExercise').addEventListener('click', function() {
    document.getElementById('exerciseCard').classList.add('hidden');
    clearInterval(countdown); 
});

document.getElementById('view-faqs-button').addEventListener('click', function() {
    const faqsSection = document.getElementById('faqs'); 
    
    faqsSection.scrollIntoView({ behavior: 'smooth' });
});

const carousel = document.getElementById('carousel');
const leftButton = document.getElementById('leftButton');
const rightButton = document.getElementById('rightButton');

let scrollAmount = 0;

rightButton.addEventListener('click', () => {
    scrollAmount += carousel.clientWidth * 0.6;
    carousel.scrollTo({
        left: scrollAmount,
        behavior: 'smooth'
    });
});

leftButton.addEventListener('click', () => {
    scrollAmount -= carousel.clientWidth * 0.6;
    carousel.scrollTo({
        left: scrollAmount,
        behavior: 'smooth'
    });
});
</script>