                    <div id="timer" class="text-center text-4xl mb-4">120</div>
                    <div id="instruction" class="text-center text-xl mb-4">Inhale</div>
                    
                    <div id="circle" class="w-32 h-32 rounded-full border-4 border-white flex items-center justify-center mx-auto mb-4">
                        <div id="animation-circle" class="w-20 h-20 bg-blue-600 rounded-full animate-breathe"></div>
