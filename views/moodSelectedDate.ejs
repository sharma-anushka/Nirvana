    <section class="past-entries">
        <h2>Past Mood Entries</h2>
        <div id="calendar">

        </div>
    </section>

    <%for(let moodEntry of moodEntries){ %>
        <section class="insights-reminders"></section>
            <div class="insights">
                <h3><%= moodEntry.mood %></h3>
                <p>Intensity : <%= moodEntry.intensity %></p>
                <p>Note : <%= moodEntry.note %></p>
            </div>
        </section>
    <%}%>


    <script>
        function setMood(mood) {
            document.getElementById('mood').value = mood;
    
        }
    </script>
    
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js'></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            
            if (calendarEl) {
                var calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                    dateClick: function(info) {
                        var selectedDate = info.dateStr;
                        window.location.href = `/moodTracker/${selectedDate}`;
                    }
                });
    
                calendar.render();
            } else {
                console.error('Calendar element not found');
            }
        });
    </script>